{
    "meta": {
        "name": "Decentralized DFNC",
        "id": "ddfnc",
        "version": "v1.0.0",
        "repository": "https:\/\/github.com\/MRN-Code\/coinstac_ddfnc_pipeline",
        "description": "a demo for decentralized dfnc"
    },
    "computation": {
        "type": "docker",
        "dockerImage": "coinstacteam/ddfnc",
        "command": [
            "python",
            "\/computation\/local.py"
        ],
        "remote": {
            "type": "docker",
            "dockerImage": "ddfnc",
            "command": [
                "python",
                "\/computation\/remote.py"
            ]
        },
        "input": {
            "data": {
              "label": "Data",
              "type": "array",
              "items": ["NIfTI"],
              "extensions": [["csv"]],
              "order": 0
            },
            "mask": {
                "label": "Mask",
                "type": "file",
                "source": "owner",
                "order": 1
            },
            "ica": {
              "label": "ICA Method",
              "default": "Infomax ICA",
              "type": "select",
              "values": [
                  "Infomax ICA",
                  "Spatially Constrained"
              ],
              "group": "ica",
              "order": 2
            },
            "num_ics": {
                "default": 20,
                "label": "Global Number of Independent Components",
                "": 1,
                "type": "number",
                "source": "owner",
                "order": 3,
                "group": "ica",
                "showValue": "Infomax ICA",
                "conditional": {
                  "variable": "ica",
                  "value": "Infomax ICA"
                }
            },
            "scica_template": {
                "label": "Spatially Constrained ICA Template",
                "type": "file",
                "order": 4,
                "group": "ica",
                "showValue": "Spatially Constrained",
                "conditional": {
                  "variable": "ica",
                  "value": "Infomax ICA"
                }
            },
            "fnc": {
                "label": "Kind of FNC to perform",
                "type": "select",
                "default": "None",
                "values": [
                    "None",
                    "Static FNC",
                    "Dynamic FNC"
                ],
                "group": "fnc_method",
                "order": 5
            },
            "fnc_window_size": {
                "default": 22,
                "label": "Sliding Window Size",
                "type": "number",
                "source": "owner",
                "order": 6,
                "group": "fnc_method",
                "showValue": "Dynamic FNC",
                "conditional": {
                  "variable": "fnc",
                  "value": "Dynamic FNC"
                }
            },
            "dfnc_k": {
                "default": 5,
                "label": "Number of Clusters",
                "type": "number",
                "source": "owner",
                "order": 7,
                "group": "fnc_method",
                "showValue": "Dynamic FNC",
                "conditional": {
                  "variable": "fnc",
                  "value": "Dynamic FNC"
                }
            }
        },
        "output": {}
    }
}
