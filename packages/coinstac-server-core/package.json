{
  "name": "coinstac-server-core",
  "version": "2.0.2",
  "description": "COINSTACâ€™s core server functionality.",
  "main": "src/index.js",
  "bin": "bin/coinstac-server-core",
  "scripts": {
    "clean": "npm run clean:computations && npm run clean:db",
    "clean:db": "node scripts/clean-db.js",
    "clean:computations": "node scripts/clean-computations.js",
    "lint": "eslint bin/coinstac-server-core scripts src test",
    "test": "nyc --reporter=lcov --check-coverage --functions=90 --branches=90 node test/",
    "lintfix": "eslint --fix src/ test/",
    "validate": "npm ls",
    "preversion": "git checkout master && git pull && npm ls",
    "docs": "mkdir -p docs && jsdoc -c .jsdoc.json src/",
    "publish-patch": "npm run preversion && npm version patch && git push origin master --tags && npm publish",
    "publish-minor": "npm run preversion && npm version minor && git push origin master --tags && npm publish",
    "publish-major": "npm run preversion && npm version major && git push origin master --tags && npm publish",
    "deploy-docs": "gh-pages -d docs && rm -rf docs",
    "postpublish": "npm run docs && npm run deploy-docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MRN-Code/coinstac-server-core.git"
  },
  "keywords": [
    "coinstac",
    "distributed"
  ],
  "author": "Cory Reed <creed@mrn.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MRN-Code/coinstac-server-core/issues"
  },
  "homepage": "https://github.com/MRN-Code/coinstac-server-core#readme",
  "dependencies": {
    "async": "^2.0.0-rc.6",
    "coinstac-common": "^2.0.2",
    "commander": "^2.9.0",
    "lodash": "^4.12.0",
    "memdown": "^1.1.2",
    "mkdirp-promise": "^2.0.0",
    "pouchdb-adapter-leveldb": "^5.4.4",
    "pouchdb-adapter-memory": "^5.4.4",
    "rimraf": "^2.5.2",
    "superagent": "^2.0.0",
    "touch": "^1.0.0",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "coins-validate": "^4.1.0",
    "concat-stream": "^1.5.1",
    "coveralls": "^2.11.9",
    "eslint": "^2.11.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.3.0",
    "eslint-plugin-react": "^5.1.1",
    "gh-pages": "^0.11.0",
    "jsdoc": "^3.4.0",
    "minami": "^1.1.1",
    "nyc": "^6.4.4",
    "pouchy": "^9.0.2",
    "sinon": "^1.17.3",
    "tape": "^4.4.0"
  },
  "pre-commit": [
    "validate",
    "lint",
    "test"
  ]
}
